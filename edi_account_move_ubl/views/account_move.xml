<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Get Invoice button in the top bar of the invoice form -->
    <record id="view_receive_button_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="preview_invoice" position="before">
                <button
                    type="object"
                    name="receive_invoice_button"
                    string="Get Invoice"
                />
            </button>
        </field>
    </record>

    <!--Send Invoice button in the top bar of the invoice form -->
    <record id="view_send_button_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="button_draft" position="before">
                <button
                    type="object"
                    name="send_invoice_button"
                    string="Send Invoice"
                />
            </button>
        </field>
    </record>
</odoo>
